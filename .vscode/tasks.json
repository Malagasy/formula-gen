{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run App",
      "command": "python",
      "args": [
        "app.py"
      ],
      "options": {
        "env": {
          "FLASK_ENV": "development"
        }
      }
    },
    {
      "label": "Run Tests",
      "command": "python",
      "group": "test",
      "args": [
        "-m",
        "xmlrunner",
        "discover",
        "-v",
        "-s",
        "${workspaceFolder}",
        "-t",
        "${workspaceFolder}",
        "-p",
        "*test*.py",
        "--output-file",
        "${workspaceFolder}/reports/results.xml"
      ]
    },
    {
      "label": "Run app (docker)",
      "command": "docker",
      "args": [
        "run",
        "-t",
        "-i",
        "-p",
        "4000:5000",
        "calgen"
      ]
    },
    {
      "label": "Build docker image",
      "command": "docker",
      "args": [
        "--no-cache",
        "-t",
        "calgen",
        "."
      ]
    },
    {
      "label": "Run jenkins local",
      "command": "java",
      "args": [
        "-jar",
        "D:\\Workspace\\jenkins.war",
        "--httpPort=8080"
      ]
    },
    {
      "label": "Run jenkins (docker)",
      "command": "docker",
      "args": [
        "container",
        "run",
        "-d",
        "-p",
        "8080:8080",
        "-v",
        "/var/run/docker.sock:/var/run/docker.sock",
        "-v",
        "D:\\Workspace:/workspace",
        "jenkins-docker"
      ]
    }
  ]
}