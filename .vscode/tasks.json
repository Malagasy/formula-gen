{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run App",
      "command": "python",
      "args": [
        "app.py"
      ],
      "options": {
        "env": {
          "FLASK_ENV": "development"
        }
      }
    },
    {
      "label": "Run Tests",
      "command": "python",
      "group": "test",
      "args": [
        "-m",
        "unittest",
        "discover",
        "-s",
        "${workspaceFolder}",
        "-t",
        "${workspaceFolder}",
        "-p",
        "*\\test*.py"
      ]
    }
  ]
}